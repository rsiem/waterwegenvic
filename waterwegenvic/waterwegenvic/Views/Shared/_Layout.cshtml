<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Waterwegenvic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Load d3.js -->
    <script src="https://d3js.org/d3.v4.js"></script>
    <script src="https://d3js.org/d3.v3.min.js"></script>

    <script src="https://d3js.org/d3.v5.min.js"></script>

    <script src="~/Scripts/d3-funnel.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

    <!-- mapbox -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v1.3.2/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.3.2/mapbox-gl.css' rel='stylesheet' />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #16283b8f; border-color: #16283b8f; opacity: 1; font-size: 1.3em">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Waterwegenvic", "Index", "Home", null, null, "home", new { area = "" }, new { @class = "navbar-brand", @style = "color: white;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, null, "home", null, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Substance", "Substance", "Home", null, null, null, null, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Litter", "Litter", "Home", null, null, null, null, new { @style = "color: white;" })</li>
                    <li>@Html.ActionLink("Stormwater", "Stormwater", "Home", null, null, null, null, new { @style = "color: white;" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <div id="footer" style="text-align: center; width: 100%; left: 0; bottom: 0;">
            <!-- Footer start -->
            <p>&copy;Aguamenti 2019</p>
            <!-- Footer end -->
        </div>
    </div>
    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
